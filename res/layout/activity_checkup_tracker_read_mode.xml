<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textViewCheckupReadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cold and Cough Checkup"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on " />

            <TextView
                android:id="@+id/checkUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July 23, 2014 "
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
            <TextView
                android:id="@+id/checkupTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:13AM"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewCheckupReadLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="with " />

            <TextView
                android:id="@+id/checkUpDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Maria Jose del Rosario"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewCheckupReadFullNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:text="NOTES" />

        <View
            android:id="@+id/NoteTitleDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/checkUpNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/lorem_ipsum" />
        
    </LinearLayout>

</ScrollView>
