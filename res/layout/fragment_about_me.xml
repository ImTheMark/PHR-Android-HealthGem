<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/profImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/picture_placeholder" />

        <TextView
            android:id="@+id/profName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Castilo, Mark"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RelativeLayout
            android:id="@+id/AboutMePersonalInformationHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textViewAboutMePersonalInformationTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_style"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Personal Information" />

            <View
                android:id="@+id/AboutMePersonalInformationDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textViewAboutMePersonalInformationTitle"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/AboutMePersonalInformationDivider"
                android:background="@drawable/underline_background"
                android:orientation="vertical"
                android:padding="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1.9" >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Birthdate: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profBday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="January 2, 1990" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                       	android:layout_weight="1.1" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sex: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" >

                        <TextView
                            android:id="@+id/TextView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5&apos;9" />
                          <TextView
                            android:id="@+id/profHeightUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" feet"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" >

                        <TextView
                            android:id="@+id/TextView08"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180" />
                        
                    </LinearLayout>
                </LinearLayout>

                

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Contact: " />

                    <TextView
                        android:id="@+id/profContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0917 4679653" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Email Address: " />

                    <TextView
                        android:id="@+id/profEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mark@gmail.com" />

                </LinearLayout>
                
                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Facebook Account: " />

                    <TextView
                        android:id="@+id/profFb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mark@gmail.com" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_style"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medical Information" />

            <View
                android:id="@+id/View01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/TextView04"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/View01"
                android:background="@drawable/underline_background"
                android:orientation="vertical"
                android:padding="5dp" >

                
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Pressure: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profSystolic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="110" />
                        <TextView
                            android:id="@+id/profBlank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/" />
                        <TextView
                            android:id="@+id/profDiastolic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                       	>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Sugar: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profSugarLvl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7.4 " />
                        <TextView
                            android:id="@+id/profSugarLvlUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" mmol/L" />
                    </LinearLayout>

                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Physical Exam: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profLastCheckup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="July 1, 2013" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                	android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Known Health Problems: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profHealthProblem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
	                	android:text="Asthma, Hypertension" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
	                	android:text="Allergies: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profAllergies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
	                	android:text="Animals, Seafood" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/TextView14"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_style"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Emergency Contact Information" />

            <View
                android:id="@+id/View02"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/TextView14"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/View02"
                android:background="@drawable/underline_background"
                android:orientation="vertical"
                android:padding="5dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Contact: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profContactPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maria Castilo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profContactNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0917 5896775" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    

</ScrollView>
