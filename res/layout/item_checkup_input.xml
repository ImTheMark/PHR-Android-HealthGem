<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textViewQuantityTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/textview_style"
            android:text="Set checkup" 
            android:gravity="center" />

        <View
            android:id="@+id/checkupQuantityDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewQuantityTitle"
            android:background="#000000" />


        <LinearLayout
            android:id="@+id/checkupPurpose"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@+id/checkupQuantityDivider"
            android:weightSum="5" 
            android:gravity="center" 
            android:padding="2dp">"

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Purpose :"
                android:textAppearance="?android:attr/textAppearanceMedium" 
                android:layout_weight="2"/>

             <EditText
		        android:id="@+id/txtPurpose"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
	            android:hint=" enter purpose" 
	            android:inputType="textMultiLine"
	            android:layout_weight="3">
	              <requestFocus />
	        </EditText>
            

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@+id/checkupPurpose"
            android:weightSum="5" 
            android:gravity="center" 
            android:padding="2dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Doctor :"
                android:textAppearance="?android:attr/textAppearanceMedium" 
                android:layout_weight="2"/>

             <EditText
		        android:id="@+id/txtDoctor"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
	            android:hint=" enter doctor" 
	            android:inputType="textMultiLine"
	            android:layout_weight="3">
	              <requestFocus />
	        </EditText>
            

        </LinearLayout>

    </RelativeLayout>
    

</LinearLayout>
