<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8" >
    
    <ScrollView
        android:id="@+id/viewDisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8" >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#E8E8E8"
    android:layout_marginBottom="20dp"
    >
    
    <RelativeLayout
        android:id="@+id/btnAchievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" 
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp">

        <Button
            android:id="@+id/btnWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write Something" />

        <Button
            android:id="@+id/btnSync"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnWrite"
            android:text="Button" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:weightSum="6"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="4"
            android:background="@drawable/container_dropshadow"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="My Daily Calorie Requirement"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHomeCalRequire"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1,565" 
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#d9581c"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:progressDrawable="@drawable/customprogressbar" />
 				<LinearLayout
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content" 
			                android:layout_alignLeft="@id/progressBar2"
					        android:layout_alignTop="@id/progressBar2"
					        android:layout_alignRight="@id/progressBar2"
					        android:layout_alignBottom="@id/progressBar2"
					        android:gravity="center">
		                <TextView
		                    android:id="@+id/txtHomeTotalCal"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="213" 
		                    android:background="#00000000"
					        android:textSize="15sp"
				            android:textColor="#FCFBFA"/>
		                <TextView
		                    android:id="@+id/txtSlash"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="/" 
		                    android:background="#00000000"
					        android:textSize="15sp"
				            android:textColor="#FCFBFA"/>
		                <TextView
		                    android:id="@+id/txtHomeTotalReqCal"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="1565" 
		                    android:background="#00000000"
					        android:textSize="15sp"
				            android:textColor="#FCFBFA"/>

                  </LinearLayout>
                
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:weightSum="6"
                 android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" 
                    android:layout_weight="3"
                    android:background="@drawable/fragmentsummaryreport_circle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_food"
                        android:gravity="center" 
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/txtTotalFoodCal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="459" 
                        android:textSize="25sp"
		                android:gravity="center"
		                android:textColor="#2b47b8"
		                android:textStyle="bold"
		                android:layout_marginTop="2dp"
		                android:layout_marginBottom="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" 
                    android:layout_weight="3"
                    android:background="@drawable/fragmentsummaryreport_pinkcircle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_activity"
                        android:gravity="center"  
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/txtTotalActivityCal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="246" 
                        android:textSize="25sp"
		                android:gravity="center"
		                android:textColor="#f50c20"
		                android:textStyle="bold"
		                android:layout_marginTop="2dp"
		                android:layout_marginBottom="15dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/weightRecordHolder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"   
            android:layout_marginLeft="5dp"
            android:background="@drawable/container_dropshadow"
            android:layout_marginRight="10dp"
            android:weightSum="4"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="BMI : "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/txtHomeBmi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="26"
                    android:textSize="15sp"
                    android:textColor="#E05C5C"
                    android:textStyle="bold" 
                    android:layout_toRightOf="@id/textView14"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgHomeWeight"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:src="@drawable/normalweight" 
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                 android:layout_weight="0.3"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView 
                    android:id="@+id/txtHomeWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="180"
                    android:textColor="#979EA1"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:maxLines="1"/>
                 <TextView 
                    android:id="@+id/txtHomeWeightUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="lbs"
                    android:textColor="#979EA1"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:maxLines="1"/>

            </LinearLayout>

            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="vertical" 
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >
                
            <TextView 
                android:id="@+id/txtHomeWeightStatus" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:gravity="center" 
                android:text="OVERWEIGHT" 
                android:textColor="#E05C5C" 
                android:textSize="12sp" 
                android:textStyle="bold" 
                android:maxLines="1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/piegraph"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp" 
        android:padding="15dp" 
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/container_dropshadow">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/container_dropshadow"
        android:orientation="horizontal"
        android:weightSum="5" >

        <LinearLayout
            android:id="@+id/titleHolder"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_blood_pressure" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/fragmentsummaryreport_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bpHomeRecordHolder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/txtAs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:maxLines="1"
                    android:text="As of "
                    android:textColor="#9e9898"
                    android:textSize="12sp" />

                 <TextView
                    android:id="@+id/txtHomeBpDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:text="Jul 12, 2014"
                    android:textColor="#9e9898"
                    android:textSize="12sp" 
                    android:layout_toRightOf="@id/txtAs"/>
                <TextView
                    android:id="@+id/txtHomeBpTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txtHomeBpDate"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:text="3:40 pm"
                    android:textColor="#9e9898"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txtHomeSystolicNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="110"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txtHomeSystolicNum"
                    android:text=" / "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtHomeDiastolic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/textView2"
                    android:text="80"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

          <LinearLayout
            android:id="@+id/bpHomeRecordHolderNull"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"  >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Please measure your blood pressure!" 
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgHomeBp"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
               />
        </LinearLayout>
        
        
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/container_dropshadow"
        android:orientation="horizontal"
        android:weightSum="5" 
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:id="@+id/titleHolder"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/homeBsImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_blood_sugar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/fragmentsummaryreport_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsHomeRecordHolder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical" 
             android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >

                
                <TextView
                    android:id="@+id/txtHomeBsAs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:maxLines="1"
                    android:text="As of "
                    android:textColor="#9e9898"
                    android:textSize="12sp"
                   />
                
                <TextView
                    android:id="@+id/txtHomeBsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    
                    android:maxLines="1"
                    android:text="Jul 12, 2014"
                    android:textColor="#9e9898"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txtHomeBsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txtHomeBsDate"
                    
                    android:maxLines="1"
                    android:text="2:40 pm"
                    android:textColor="#9e9898"
                   android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" 
                >

                <TextView
                    android:id="@+id/txtHomeBsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="7.5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txtHomeBsNumber"
                    android:text=" "
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtHomeBsType"
                    android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView2"
                    android:gravity="center"
                    android:text="Post prandial"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsHomeRecordHolderNull"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"  >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Please measure your blood sugar!" 
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgHomeBs"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                 />
        </LinearLayout>
        
        
        
    </LinearLayout>
    
</LinearLayout>
    
</ScrollView>

<LinearLayout
        android:id="@+id/journalTabsPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@id/viewDisplay"
        android:gravity="center"
        android:background="#319DF5" >
        
        <Button
            android:id="@+id/btnStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#319DF5"
            style="?android:attr/buttonStyleSmall"
            android:text="Post a Status" />

    </LinearLayout>
    
</RelativeLayout>