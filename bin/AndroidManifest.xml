<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-feature android:name="android.hardware.camera"
                  android:required="true" />
    <application
        android:name="com.example.phr.application.HealthGem"
        android:allowBackup="true"
        android:icon="@drawable/heart_gem"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:allowClearUserData="true"
        android:debuggable="true"
        android:vmSafeMode="true"       
        android:hardwareAccelerated="true">
        
        
		<meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
        
        <activity
            android:name="com.example.phr.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity android:name="com.example.phr.RegisterFBLoginActivity" 
            android:configChanges="orientation|keyboardHidden"
  	 		android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.facebook.LoginActivity"/>
        
        <activity android:name="com.example.phr.RegisterActivity" 
            android:configChanges="orientation|keyboardHidden"
  	 		android:screenOrientation="portrait"/>
        <activity android:name="com.example.phr.MainActivity" 
            android:configChanges="orientation|keyboardHidden"
  	 		android:screenOrientation="portrait"/>
        <activity android:name="com.example.phr.ActivitiesTrackerActivity" />
        <activity android:name="com.example.phr.AddActionActivity" />
        <activity android:name="com.example.phr.BloodPressureTrackerActivity" />
        <activity android:name="com.example.phr.BloodPressurePostActivity" />
        <activity android:name="com.example.phr.BloodSugarTrackerActivity" />
        <activity android:name="com.example.phr.CalorieBreakdownTrackerActivity" />
        <activity android:name="com.example.phr.CalorieTrackerActivity" />
        <activity android:name="com.example.phr.CheckupTrackerActivity" />
        <activity android:name="com.example.phr.CheckupTrackerReadModeActivity" />
        <activity android:name="com.example.phr.FoodTrackerDailyActivity" />
        <activity android:name="com.example.phr.GroupedFoodTrackerActivity" />
        <activity 
            android:name="com.example.phr.NewStatusActivity" 
            android:configChanges="orientation|keyboardHidden"
  	 		android:screenOrientation="portrait"
            />
        
        <activity android:name="com.example.phr.NoteReadModeActivity" />
        <activity android:name="com.example.phr.NoteTrackerActivity" />
        <activity android:name="com.example.phr.RetrieveActivity" />
        <activity android:name="com.example.phr.SettingsActivity" />
        <activity android:name="com.example.phr.StatusFeedActivity" />
        <activity android:name="com.example.phr.WeightTrackerActivity" />
        <activity android:name="com.example.phr.foodSearchListActivity" />
        <activity android:name="com.example.phr.ActivitiesSearchListActivity" />
    </application>

</manifest>
